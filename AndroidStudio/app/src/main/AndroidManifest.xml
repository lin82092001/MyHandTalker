<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.smartglovev2">
    <uses-permission android:name="android.permission.BLUETOOTH" />             //  加入藍芽使用許可權限
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />       //  加入藍芽最高使用許可權限
    <uses-permission android:name="android.permission.INTERNET"/>               //  加入網路使用許可權限
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>   //  加入改變網路狀態許可權限
    <application
        android:allowBackup="true"
        android:icon="@drawable/finger"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>